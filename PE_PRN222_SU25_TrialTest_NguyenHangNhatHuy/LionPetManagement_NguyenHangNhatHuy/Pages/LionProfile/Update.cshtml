@page
@model LionPetManagement_NguyenHangNhatHuy.Pages.LionProfile.UpdateModel
@{
    ViewData["Title"] = "Update Lion Profile";
}

<div class="container mt-4">
    <div class="card p-4 shadow-lg" style="max-width: 600px; margin: auto;">
        <h3 class="text-center text-primary">Edit Lion Profile</h3>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="LionProfile.LionProfileId" />
            <input type="hidden" asp-for="LionProfile.ModifiedDate" />

            <div class="mb-3">
                <label asp-for="LionProfile.LionName" class="form-label">Lion Name</label>
                <input asp-for="LionProfile.LionName" class="form-control" />
                <span asp-validation-for="LionProfile.LionName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LionProfile.LionTypeId" class="form-label">Lion Type</label>
                <select asp-for="LionProfile.LionTypeId" class="form-select" asp-items="ViewBag.LionTypeId">
                </select>
                <span asp-validation-for="LionProfile.LionTypeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LionProfile.Weight" class="form-label">Weight (kg)</label>
                <input type="number" step="0.1" asp-for="LionProfile.Weight" class="form-control" />
                <span asp-validation-for="LionProfile.Weight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LionProfile.Characteristics" class="form-label">Characteristics</label>
                <textarea asp-for="LionProfile.Characteristics" class="form-control" rows="3"></textarea>
                <span asp-validation-for="LionProfile.Characteristics" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LionProfile.Warning" class="form-label">Warning</label>
                <textarea asp-for="LionProfile.Warning" class="form-control" rows="3"></textarea>
                <span asp-validation-for="LionProfile.Warning" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-warning">Update</button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

