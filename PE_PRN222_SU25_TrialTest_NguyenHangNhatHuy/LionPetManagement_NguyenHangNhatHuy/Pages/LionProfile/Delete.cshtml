@page
@model LionPetManagement_NguyenHangNhatHuy.Pages.LionProfile.DeleteModel
@{
    ViewData["Title"] = "Delete Lion Profile";
}

<div class="container mt-4">
    <div class="card p-4 shadow-lg" style="max-width: 600px; margin: auto;">
        <h3 class="text-center text-danger">Delete Lion Profile</h3>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="LionProfile.LionProfileId" />
            <p>Are you sure you want to delete this Lion Profile: <strong>@Model.LionProfile.LionName</strong>?</p>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
